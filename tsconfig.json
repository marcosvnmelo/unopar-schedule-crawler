{
    "extends": "@apify/tsconfig",
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "outDir": "dist",
        "noUnusedLocals": false,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "lib": ["DOM"],
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules/"],
    "tsc-alias": {
        "resolveFullPaths": true
    }
}
